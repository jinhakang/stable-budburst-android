<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:id="@+id/AddSiteScroll"
>

<RelativeLayout
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

	<TextView
	android:id="@+id/latitude_label"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="20dip"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
	android:textSize="17dip"
	android:text="Latitude"
	>
	</TextView>
	<EditText 
	android:id="@+id/latitude"
	android:layout_below="@+id/latitude_label"
	android:hint="Latitude"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	>
	</EditText>

	<TextView
	android:id="@+id/longitude_label"
	android:layout_below="@+id/latitude"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
	android:textSize="17dip"
	android:text="Longitude"
	>
	</TextView>
	<EditText 
	android:id="@+id/longitude"
	android:layout_below="@+id/longitude_label"
	android:hint="Longitude"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	>
	</EditText>
	
	<TextView
	android:id="@+id/sitename_lable"
	android:layout_below="@+id/longitude"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
	android:textSize="17dip"
	android:text="Site name"
	>
	</TextView>
	<EditText 
	android:id="@+id/sitename"
	android:layout_below="@+id/sitename_lable"
	android:hint="sitename"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	>
	</EditText>
	
	<TextView
	android:id="@+id/comment_lable"
	android:layout_below="@+id/sitename"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:textSize="17dip"
	android:text="Comment"
	>
	</TextView>
	<EditText 
	android:id="@+id/comment"
	android:layout_below="@+id/comment_lable"
	android:hint="Comment"
	android:layout_marginLeft="3dip"
	android:layout_marginRight="3dip"	
	android:layout_height="100dip"
	android:layout_width="fill_parent"
	>
	</EditText>
	
	<Button
	android:id="@+id/save"
	android:layout_below="@+id/comment"
	android:textColor="@drawable/black"
	android:layout_width="130dip"
	android:layout_height="wrap_content"
	android:layout_margin="10dip"
	android:layout_centerHorizontal="true"
	android:gravity="center" 
	android:textSize="20dip"
	android:text="Save"
	android:focusable="true"
	/>
	
</RelativeLayout>
</ScrollView>